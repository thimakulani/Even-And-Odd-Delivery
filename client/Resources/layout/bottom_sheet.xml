
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:padding="15dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        tools:ignore="PossiblyUselessParentWithBackground"
    >
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:text="@string/txt_distance"
            android:textStyle="bold"
            android:layout_below="@+id/view1"
            
        />
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:textStyle="bold"
            android:id="@+id/TxtDistance"
            android:layout_below="@+id/view1"
            
        />
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:text="@string/txt_price"
            android:minHeight="25px"
            android:textStyle="bold"
            android:layout_below="@+id/TxtDistance"
            
        />
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:minHeight="25px"
            android:id="@+id/TxtPrice"
            android:layout_below="@+id/TxtDistance"
        />
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:paddingTop="5dp"
            android:textColor="#ffffff"
            android:text="@string/txt_duration"
            android:minHeight="25px"
            android:id="@+id/Duration_Caption"
            android:textStyle="bold"
            android:layout_below="@+id/TxtPrice"
            
        />
        <com.google.android.material.textview.MaterialTextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:minHeight="25px"
            android:id="@+id/TxtDuration"
            android:layout_below="@+id/TxtPrice"
        />
        <com.google.android.material.button.MaterialButton
            android:text="@string/txt_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BtnContinueRequest"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/TxtDuration"
            app:strokeColor="@color/quantum_white_100"
            app:strokeWidth="2dp"
        
        />
    </RelativeLayout>

</LinearLayout>